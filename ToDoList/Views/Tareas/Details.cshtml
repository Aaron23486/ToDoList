@model ToDoList.Data.Entities.Tarea

@{
    ViewData["Title"] = "Detalles de la Tarea";
}

<div class="container my-5">
    <div class="row justify-content-center align-items-center mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-dark">Detalles de la Tarea</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Información de la Tarea</h4>
                    <hr />

                    <dl class="row">
                        <!-- Título -->
                        <dt class="col-sm-4">
                            Título
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <!-- Descripción -->
                        <dt class="col-sm-4">
                            Descripción
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <!-- Fecha de Vencimiento -->
                        <dt class="col-sm-4">
                            Fecha de Vencimiento
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DueDate, "{0:MMMM dd, yyyy}")
                        </dd>

                        <!-- Estado de la tarea -->
                        <dt class="col-sm-4">
                            Estado
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.IsCompleted)
                            {
                                <span class="badge bg-success">Completada</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No Completada</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <!-- Botones con iconos -->
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.TareaId">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="bi bi-arrow-left-circle"></i> Volver a la Lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    }
}
